{
  "description": "Ejemplo de request para generar un test personalizado",
  "examples": [
    {
      "name": "Test básico con 3 topics (30 preguntas)",
      "request": {
        "topics": [
          { "id": 1, "weight": 0.4 },
          { "id": 2, "weight": 0.35 },
          { "id": 3, "weight": 0.25 }
        ],
        "totalQuestions": 30
      },
      "expected_distribution": {
        "1": 12,
        "2": 11,
        "3": 7
      }
    },
    {
      "name": "Test con pesos no normalizados (50 preguntas)",
      "request": {
        "topics": [
          { "id": 1, "weight": 10 },
          { "id": 2, "weight": 6 },
          { "id": 3, "weight": 4 }
        ],
        "totalQuestions": 50,
        "academyId": 1
      },
      "expected_distribution": {
        "1": 25,
        "2": 15,
        "3": 10
      }
    },
    {
      "name": "Test pequeño con 2 topics (10 preguntas)",
      "request": {
        "topics": [
          { "id": 5, "weight": 0.6 },
          { "id": 8, "weight": 0.4 }
        ],
        "totalQuestions": 10,
        "academyId": 1
      },
      "expected_distribution": {
        "5": 6,
        "8": 4
      }
    },
    {
      "name": "Test grande con múltiples topics (100 preguntas)",
      "request": {
        "topics": [
          { "id": 1, "weight": 0.3 },
          { "id": 2, "weight": 0.25 },
          { "id": 3, "weight": 0.2 },
          { "id": 4, "weight": 0.15 },
          { "id": 5, "weight": 0.1 }
        ],
        "totalQuestions": 100
      },
      "expected_distribution": {
        "1": 30,
        "2": 25,
        "3": 20,
        "4": 15,
        "5": 10
      }
    }
  ]
}

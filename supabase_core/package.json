{
  "name": "supabase-core",
  "version": "1.0.0",
  "description": "Migraciones y Edge Functions compartidas para m√∫ltiples proyectos Supabase",
  "scripts": {
    "setup": "./scripts/setup.sh",
    "dev": "./scripts/dev-start.sh",
    "dev:policia": "./scripts/dev-start.sh policia_nacional",
    "dev:guardia": "./scripts/dev-start.sh guardia_civil",
    "dev:switch": "./scripts/dev-switch.sh",
    "dev:stop": "supabase stop",
    "dev:reset": "supabase db reset",
    "dev:studio": "echo 'Studio: http://127.0.0.1:54323'",

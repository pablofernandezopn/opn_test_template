    "secrets:policia": "./scripts/setup-secrets.sh policia_nacional",
    "secrets:guardia": "./scripts/setup-secrets.sh guardia_civil",
    "deploy:policia": "./scripts/deploy.sh policia_nacional",
    "deploy:guardia": "./scripts/deploy.sh guardia_civil",
    "deploy:all": "./scripts/deploy-all.sh",
    "migrate:policia": "./scripts/deploy-migrations.sh policia_nacional",
    "migrate:guardia": "./scripts/deploy-migrations.sh guardia_civil",
    "functions:policia": "./scripts/deploy-functions.sh policia_nacional",
    "functions:guardia": "./scripts/deploy-functions.sh guardia_civil",
    "db:diff:policia": "./scripts/db-diff.sh policia_nacional",
    "db:diff:guardia": "./scripts/db-diff.sh guardia_civil",
